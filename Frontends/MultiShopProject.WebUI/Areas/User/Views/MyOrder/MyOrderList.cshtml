<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişi</h4>
                        <p class="card-description">
                            Çok harcayın, çok kazanın!
                        </p>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        @* var rowColor = tableRowColors[count % tableRowColors.Count]; <tr class="@rowColor">*@
                                        count++;
                                        <tr>
                                            <th>@count</th>
                                            <td>@item.TotalPrice</td>
                                            <td>@(((DateTime)item.OrderDate).ToString("dd-MM-yyyy"))</td>
                                            <td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <!-- partial -->
</div>

